source 'https://rubygems.org'

# Specify your gem's dependencies in chat_api.gemspec
gemspec

group :test do
  gem 'rspec'
  gem 'yard'
  gem 'webmock'
  gem 'shoulda-matchers'
end
# gem 'rubycritic'

=begin
  # CODE ANALYSIS AND METRICS
  spec.add_development_dependency 'rubycritic'            # A Ruby code quality reporter.
  spec.add_development_dependency 'reek'                  # Code smell detector for Ruby.
  spec.add_development_dependency 'flog'                  # Flog reports the most tortured code in an easy to read pain report. The higher the score, the more pain the code is in.
  spec.add_development_dependency 'flay'                  # Flay analyzes code for structural similarities. Differences in literal values, variable, class, method names, whitespace, programming style, braces vs do/end, etc are all ignored. Making this totally rad.

  spec.add_development_dependency 'simplecov'             # Code coverage for Ruby 1.9+ with a powerful configuration library and automatic merging of coverage across test suites.

  spec.add_development_dependency 'Barkeep' # Barkeep is a fast, fun way to review code. Engineering organizations can use it to keep the bar high.
  spec.add_development_dependency 'Brakeman' # A static analysis security vulnerability scanner for Ruby on Rails applications.
  spec.add_development_dependency 'Cane' # Code quality threshold checking as part of your build.
  spec.add_development_dependency 'Coverband' # Rack middleware to help measure production code coverage.
  spec.add_development_dependency 'fukuzatsu' # Complexity analysis tool with a rich web fron't# nd.
  spec.add_development_dependency 'MetricFu' # A fist full of code metrics.
  spec.add_development_dependency 'Pronto' # Quick automated code review of your changes.
  spec.add_development_dependency 'Rubocop' # A static code analyzer, based on the community Ruby style guide.

  spec.add_development_dependency 'sandi_meter'           # Checks for compliance to Sandi Metz's rules for developers.

  spec.add_development_dependency 'traceroute'            # Checks for undefined routes and unreachable actions.
  spec.add_development_dependency 'bullet'                # Checks for query optimizations.
  spec.add_development_dependency 'rails_best_practices'  # A code metric tool for rails projects.
=end